<h2 class="title">Create a new product</h2>
<form method="post" action="/dashboard/product/" id="form_create_product" class="form">
    <label for="name">name</label>
    <input id="name" type="text" value="super product" name="name" required>
    <label for="ref">lastname</label>
    <input id="ref" type="text" value="ref123123Z" name="ref" required>
    <label for="price">price</label>
    <input id="price" type="number" min="0" value="450" name="price" required>
    <label for="category">category</label>
    <select id="category" name="category">
        {{#each categories}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button id="btn_create_product" class="btn">ok</button>
</form>