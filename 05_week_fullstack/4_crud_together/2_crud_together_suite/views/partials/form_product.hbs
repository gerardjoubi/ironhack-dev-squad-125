<h2 class="title">{{title}}</h2>
<p class="msg {{msg.status}}">
    {{ msg.txt }}
</p>
<form method="post" action="{{action}}" id="form_create_product" class="form">
    <label for="name">name</label>

    <input id="name" type="text" 
    value="{{ternary product product.name "default product"}}"
    name="name" required>

    <label for="ref">reference</label>

    <input id="ref" type="text" value="{{ternary product product.ref ""}}" name="ref" required placeholder="ex: ref123123A">

    <label for="price">price</label>
    <input id="price" type="number" min="0" name="price" required
    value="{{ternary product product.price ""}}">
    
    <label for="category">category</label>
    <select id="category" name="category">
        {{#each categories}}

        <option value="{{this._id}}" selected="">{{this.name}}</option>
    
        {{/each}}
    </select>
    <button id="btn_create_product" class="btn">ok</button>
</form>