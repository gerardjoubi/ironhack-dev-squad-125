
<p class="account-message">
    Do you already have an account ? Please <a href="/login" class="green">login</a>.
</p>

<form method="post" action="/register" id="form_register" class="form">
    <label for="name">name</label>
    <input id="name" type="text" value="foo" name="name" required>
    <label for="lastname">lastname</label>
    <input id="lastname" type="text" value="bar" name="lastname" required>
    <label for="email">email</label>
    <input id="email" type="email" value="baz@baz.com" name="email" required>
    <label for="password">password <i id="reveal_password" class="clickable fas fa-eye"></i></label>
    <input id="password" type="password" value="123Sunshine" name="password" required>
    <label for="age">age</label>
    <input id="age" type="number" value="38" name="age">
    <button id="btn_register" class="btn">register</button>
</form>